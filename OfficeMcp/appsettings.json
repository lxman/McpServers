{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "OfficeService": {
    "MaxDocuments": 25,
    "MaxFileSizeMB": 100,
    "SupportedFormats": [".docx", ".xlsx", ".pptx", ".doc", ".xls", ".ppt"],
    "EnableFuzzySearch": true,
    "DefaultSearchContextSize": 150,
    "MaxSearchResults": 50
  },
  "Performance": {
    "EnableParallelProcessing": true,
    "MaxConcurrentOperations": 3,
    "MemoryThresholdMB": 512,
    "EnableContentCaching": true
  },
  "Security": {
    "AllowPasswordProtectedDocuments": true,
    "MaxPasswordAttempts": 3,
    "AllowMacroDocuments": false,
    "ScanForMalware": true
  }
}