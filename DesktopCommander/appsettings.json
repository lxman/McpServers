{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "System": "Warning",
      "DesktopCommander": "Information"
    }
  },
  "Security": {
    "AllowedDirectories": [
      "C:\\Users",
      "C:\\Temp"
    ],
    "BlockedCommands": [
      "format",
      "del /s",
      "rm -rf /"
    ],
    "MaxFileSize": 104857600,
    "MaxCommandTimeout": 300000
  },
  "FileEditing": {
    "ApprovalTimeoutMinutes": 15,
    "MaxPendingEdits": 100,
    "CreateBackupsByDefault": false
  },
  "DocumentSearch": {
    "MaxIndexes": 50,
    "IndexCacheDirectory": "./cache/indexes",
    "EnableOCR": true,
    "OCRLanguages": ["eng"],
    "MaxDocumentSize": 52428800
  },
  "Process": {
    "MaxConcurrentSessions": 10,
    "DefaultCommandTimeout": 30000
  },
  "AllowedHosts": "*"
}
