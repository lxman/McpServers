<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions"  />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions"  />
      <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions"  />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions"  />
      <PackageReference Include="ModelContextProtocol"  />
    </ItemGroup>

    <ItemGroup>
      <None Update="appsettings.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Libraries\SerilogFileWriter\SerilogFileWriter.csproj" />
      <ProjectReference Include="..\Libraries\SqlServer.Core\SqlServer.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="skills\" />
    </ItemGroup>

    <ItemGroup>
        <!-- Copy skills documentation to output directory -->
        <None Update="skills\**\*.md">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
