{
  "name": "typescript-analyzer-mcp",
  "version": "1.0.0",
  "description": "MCP server that exposes TypeScript Compiler API capabilities for code analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "typescript-analyzer-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsoa spec-and-routes && tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "http-server": "npm run build && node dist/http_server.js"
  },
  "keywords": [
    "mcp",
    "typescript",
    "analyzer",
    "compiler-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/swagger-ui-express": "^4.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
