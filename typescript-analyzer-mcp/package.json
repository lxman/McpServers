{
  "name": "typescript-analyzer-mcp",
  "version": "1.0.0",
  "description": "MCP server that exposes TypeScript Compiler API capabilities for code analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "typescript-analyzer-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsoa spec-and-routes && tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "http-server": "npm run build && node dist/http_server.js"
  },
  "keywords": [
    "mcp",
    "typescript",
    "analyzer",
    "compiler-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "typescript": "^5.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "tsoa": "^6.4.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
